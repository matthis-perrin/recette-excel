{
  "extends": "@matthis/tsconfig-node/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/*",
        "./node_modules/@types/*",
        "../shared/node_modules/*",
        "../shared/node_modules/@types/*",
        "../shared-node/node_modules/*",
        "../shared-node/node_modules/@types/*"
      ],
      "@shared/*": ["../shared/src/*"],
      "@shared-node/*": ["./src/*"]
    }
  },
  "include": ["src", "../shared"]
}
